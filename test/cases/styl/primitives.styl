
@import "stylus-platonic/dev/dev"
@import "stylus-platonic"

.platonic-viewport

    .scene

        .ui-component.grid
            grid(component-id: 0)

        .mesh

            &[data-mesh-type="plane"]
                plane(translate-x: 300px, color: red, mesh-id: 0)

            &[data-mesh-type="cube"]
                cube(translate-x: -300px, color: orange, mesh-id: 1)

            &[data-mesh-type="pyramid"]
                pyramid(color: white, mesh-id: 2)