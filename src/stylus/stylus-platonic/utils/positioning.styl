/*
 * Center an element by it's offset
 *
 * @param width
 * @param height
 * @api   public
 */

center(width = 0, height = 0)
    margin-top  : - (width / 2)
    margin-left : - (height / 2)


/*
 * Offset an element
 *
 * @param offset-x
 * @param offset-y
 * @api   public
 */

offset(offset-x = 0, offset-y = 0)
    margin-top  : offset-x
    margin-left : offset-y


/*
 * Set the default transform for an object
 *
 * @param translate-x
 * @param translate-y
 * @param translate-z
 * @param rotate-x
 * @param rotate-y
 * @param rotate-z
 * @api   public
 */

set-transform(translate-x, translate-y, translate-z, rotate-x, rotate-y, rotate-z)
    transform(rotateX(rotate-x) rotateY(rotate-y) rotateZ(rotate-z) translate3d(translate-x, translate-y, translate-z)) 
