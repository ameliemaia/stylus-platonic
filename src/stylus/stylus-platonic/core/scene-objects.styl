// Abstract scene object

.scene-object

    transform-style(preserve-3d)
    transform-origin(50% 50%)

    absolute   top 50% left 50%
    width    : 0
    height   : 0


.platonic-viewport

    .scene

        // Meshes 

        div.mesh
            @extend .scene-object
            div.face
                backface-visibility(face-backface-visibility)
                position : absolute
        
        
        // Groups

        div.group
            @extend .scene-object


        // UI Components

        div.ui-component
            @extend .scene-object


        // Points

        div.point

            @extend .scene-object
            border-radius(50%)

            background-color : point-color
            absolute           top 0 left 0
            width            : point-size
            height           : point-size
