// Base transform

.transform

    transform-style(preserve-3d)
    transform-origin(50% 50%)

    absolute   top 50% left 50%
    width    : 0
    height   : 0


// Viewport

.platonic-viewport
    
    perspective(viewport-perspective)
    perspective-origin(50%)

    background-color : viewport-background-color
    background       : linear-gradient(viewport-gradient1-color, viewport-gradient2-color)
    overflow         : hidden
    relative           margin-top 0 margin-left 0
    width            : viewport-width
    height           : viewport-height

    .scene
        width  : @width
        height : @height

         // Meshes 
        .mesh
            @extend .transform
            .face
                backface-visibility(face-backface-visibility)
                position : absolute
        
        
        // Groups
        .group
            @extend .transform


        // UI Components
        .ui-component
            @extend .transform


        // Points
        .point

            @extend .transform
            border-radius(50%)
            center(point-size, point-size)

            background-color : point-color
            absolute           top 0 left 0
            width            : point-size
            height           : point-size
